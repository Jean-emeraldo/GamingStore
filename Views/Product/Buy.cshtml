<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>CONFIRMER L'ACHAT</title>
    <style>
        /* Style général de la page */
body {
    background-color: #121212; /* Fond sombre */
    color: #e0e0e0; /* Texte clair */
    font-family: 'Arial', sans-serif; /* Police de caractères */
    margin: 0;
    padding: 0;
}

/* Conteneur principal */
.container {
    max-width: 800px;
    margin: 50px auto;
    padding: 20px;
    background-color: #1e1e1e; /* Fond légèrement plus clair pour le contraste */
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Ombre pour un effet de profondeur */
}

/* Titre principal */
h1 {
    font-size: 2rem;
    text-align: center;
    margin-bottom: 20px;
    color: #ff4081; /* Couleur accent */
}

/* Détails du produit */
.product-details {
    text-align: center;
    margin-bottom: 30px;
}

.product-details h2 {
    font-size: 1.5rem;
    margin-bottom: 10px;
}

.product-details p {
    font-size: 1rem;
    margin-bottom: 15px;
}

.product-image {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 15px;
}

/* Formulaire de confirmation */
.form {
    display: flex;
    flex-direction: column;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    font-size: 1rem;
    margin-bottom: 5px;
    display: block;
}

.form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #333;
    border-radius: 4px;
    background-color: #2c2c2c; /* Fond sombre pour les champs */
    color: #e0e0e0; /* Texte clair */
    font-size: 1rem;
}

.form-control:focus {
    border-color: #ff4081; /* Couleur accent au focus */
    outline: none;
}

/* Boutons */
.buttons {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
}

.btn {
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.btn-success {
    background-color: #4caf50; /* Couleur de succès */
    color: #ffffff;
}

.btn-success:hover {
    background-color: #45a049; /* Couleur plus foncée au survol */
}

.btn-danger {
    background-color: #f44336; /* Couleur de danger */
    color: #ffffff;
}

.btn-danger:hover {
    background-color: #e57373; /* Couleur plus foncée au survol */
}

/* Alertes */
.alert {
    background-color: #f44336; /* Couleur de danger */
    color: #ffffff;
    padding: 10px;
    border-radius: 4px;
    margin-top: 20px;
}

/* Footer */
.footer {
    background-color: #1e1e1e; /* Fond légèrement plus clair pour le contraste */
    color: #e0e0e0; /* Texte clair */
    text-align: center;
    padding: 10px 0;
}

.footer .container {
    display: flex;
    justify-content: center;
    align-items: center;
}

    </style>
</head>
<body>
    <main class="container">
        <h1>CONFIRMER L'ACHAT</h1>

        <!-- Détails du produit -->
        <div class="product-details">
            <h2>@Model.Name</h2>
            <p>Prix : @Model.Price.ToString("C")</p>
            <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image" />
            <p>@Model.Description</p>
        </div>

        <!-- Formulaire de confirmation -->
        <form asp-action="ConfirmBuy" asp-controller="Product" method="post" class="form">
            <input type="hidden" name="productId" value="@Model.Id" />

            <div class="form-group">
                <label for="account">Votre compte :</label>
                <input type="text" id="account" name="account" class="form-control" required />
            </div>
            
            <div class="form-group">
                <label for="password">Votre mot de passe :</label>
                <input type="password" id="password" name="password" class="form-control" required />
            </div>

            <div class="buttons">
                <button type="submit" class="btn btn-success">Entrer</button>
                <a href="/Product/Index" class="btn btn-danger">Refuser</a>
            </div>
        </form>

        <!-- Affichage des erreurs -->
        @if (!string.IsNullOrEmpty(ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage))
        {
            <div class="alert alert-danger">
                @ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage
            </div>
        }
    </main>
    
    <footer class="footer border-top text-muted py-3">
        <div class="container">
            &copy; 2025 - GamingStore
        </div>
    </footer>
</body>
</html>