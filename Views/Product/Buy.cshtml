<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>CONFIRMER L'ACHAT</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <main class="container">
        <h1>CONFIRMER L'ACHAT</h1>

        <!-- DÃ©tails du produit -->
        <div class="product-details">
            <h2>@Model.Name</h2>
            <p>Prix : @Model.Price.ToString("C")</p>
            <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image" />
            <p>@Model.Description</p>
        </div>

        <!-- Formulaire de confirmation -->
        <form asp-action="ConfirmBuy" asp-controller="Product" method="post" class="form">
            <input type="hidden" name="productId" value="@Model.Id" />

            <div class="form-group">
                <label for="account">Votre compte :</label>
                <input type="text" id="account" name="account" class="form-control" required />
            </div>
            
            <div class="form-group">
                <label for="password">Votre mot de passe :</label>
                <input type="password" id="password" name="password" class="form-control" required />
            </div>

            <div class="buttons">
                <button type="submit" class="btn btn-success">Entrer</button>
                <a href="/Product/Index" class="btn btn-danger">Refuser</a>
            </div>
        </form>

        <!-- Affichage des erreurs -->
        @if (!string.IsNullOrEmpty(ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage))
        {
            <div class="alert alert-danger">
                @ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage
            </div>
        }
    </main>
    
    <footer class="footer border-top text-muted py-3">
        <div class="container">
            &copy; 2025 - GamingStore
        </div>
    </footer>
</body>
</html>