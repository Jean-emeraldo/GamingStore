    <script src="../js/carousel.js" defer></script>
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        let currentIndex = 0;
        const items = document.querySelectorAll('.carousel-item');
        const carouselInner = document.querySelector('.carousel-inner');
        const totalItems = items.length;
        const intervalTime = 3000; 

        if (totalItems > 0) {
            
            carouselInner.style.width = `${totalItems * 100}%`;
            carouselInner.style.display = 'flex';
            carouselInner.style.transition = 'transform 0.5s ease-in-out';

            items.forEach(item => {
                item.style.width = `${100 / totalItems}%`;
                item.style.flexShrink = '0';
            });

            function changeSlide(n = 1) {
                currentIndex = (currentIndex + n + totalItems) % totalItems;
                carouselInner.style.transform = `translateX(-${currentIndex * (100 / totalItems)}%)`;
            }

            
            setInterval(() => {
                changeSlide(1);
            }, intervalTime);
        }
    });
    </script>


