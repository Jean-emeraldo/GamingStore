@model GamingStore.Models.LoginViewModel




@if (TempData["Error"] != null)
{
    <div class="error-message">
        @TempData["Error"]
    </div>
}

<div class="container">
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="emailOrName">Nom ou Gmail :</label>
            <input id="emailOrName" asp-for="EmailOrName" required />
        </div>
        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input id="password" asp-for="Password" type="password" required />
        </div>
        <div class="form-group">
            <button type="submit">Se connecter</button>
            
        </div>
    </form>

</div>
<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Arial', sans-serif;
    background: rgba(20, 40, 60, 0.7);
    color: #e0e0e0; /* texte clair */
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    padding: 20px;
}

.container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 20px;
    width: 100%;
    max-width: 1200px;
}

form {
    background-color: #1e1e1e; /* fond du formulaire */
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(255, 255, 255, 0.05); /* ombre légère claire */
    width: 100%;
    max-width: 400px;
    flex: 1;
}

.form-group {
    margin-bottom: 20px;
}

label {
    display: block;
    font-size: 1rem;
    margin-bottom: 5px;
    color: #cccccc; /* couleur de label adoucie */
}

input {
    width: 100%;
    padding: 10px;
    font-size: 1rem;
    background-color: #2a2a2a; /* champ sombre */
    color: #f0f0f0; /* texte clair */
    border: 1px solid #333;
    border-radius: 5px;
    outline: none;
    transition: border-color 0.3s;
}

input:focus {
    border-color: #1e90ff; /* bleu un peu plus doux */
}

button {
    width: 100%;
    padding: 12px;
    background-color: #1e90ff; /* bouton bleu lumineux */
    color: white;
    font-size: 1rem;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

button:hover {
    background-color: #0066cc;
}

a {
    display: block;
    text-align: center;
    margin-top: 10px;
    color: #66b2ff; 
    text-decoration: none;
    font-size: 0.9rem;
}

a:hover {
    text-decoration: underline;
}
</style>

